<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailed_news"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/image_view2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@id/image_view2"
        app:layout_constraintTop_toBottomOf="@id/image_view2"
        android:layout_marginTop="15dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:paddingStart="10dp"
        tools:text="This is heading"
        />
    <TextView
        android:id="@+id/description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        app:layout_constraintStart_toStartOf="@id/title2"
        app:layout_constraintTop_toBottomOf="@id/title2"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:paddingStart="10dp"
        tools:text="This is description"
        />
    <Button
        android:id="@+id/read_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="READ MORE"
        app:layout_constraintStart_toStartOf="@+id/description2"
        app:layout_constraintBottom_toBottomOf="parent"
android:textSize="24sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
